<%= form_for :session, url: sessions_path do |f| %>
  <% if @error_message %>
    <p><%= @error_message%></p>
  <% end %>
  <%= f.text_field :email, placeholder: "email" %><br>
  <%= f.password_field :password, placeholder: "password" %><br>
  <%= f.submit 'Login', class: 'btn btn-success' %>
  <% end %>